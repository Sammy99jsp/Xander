{
    "$schema": "./env2/duel.schema.json",
    "type": "duel",
    "seed": 0,
    "arena": {
        "width": 40,
        "height": 40
    },
    "training": {
        "max_steps": 1000000,
        "save_every": 10000,
        "save_path": "runs/ppo",
        "test_every": 80000,
        "test_steps": 2000
    },
    "rewards": {
        "illegal": -0.5,
        "lose": -10,
        "step": -0.5,
        "win": 10
    },
    "members": [
        {
            "type": "random",
            "stats_file": "rat.json",
            "name": "RA1"
        },
        {
            "type": "learner",
            "algorithm": "ppo",
            "hyperparameters": {
                "batch_size": 64,
                "clip_range": 0.2,
                "clip_range_vf": null,
                "device": "cpu",
                "ent_coef": 0,
                "gae_lambda": 0.95,
                "gamma": 0.99,
                "learning_rate": 0.0003,
                "max_grad_norm": 0.5,
                "n_envs": 8,
                "n_epochs": 10,
                "n_steps": 2048,
                "normalize_advantage": true,
                "policy_kwargs": null,
                "sde_sample_freq": -1,
                "stats_window_size": 100,
                "target_kl": null,
                "use_sde": false,
                "verbose": 1,
                "vf_coef": 0.5
            },
            "train": true,
            "pretrained_model_path": null,
            "stats_file": "rat.json",
            "name": "RAX"
        }
    ],
    "max_steps": 10000000,
    "wandb": {
        "entity": "sammy99jsp_wandb",
        "project": "xander-duel-rat-ppo",
        "sync_tensorboard": true
    }
}